package aplication;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc= new Scanner(System.in);
		System.out.println("Quantos valores vai ter cada vetor?");
		int n=sc.nextInt();
		
		int[] A=new int[n];
		int[]B=new int[n];
		int[] C= new int[n];
		
		System.out.println("Digite os valores do vetor A: ");
		int somadeA=0;
		for(int i=0;i<n;i++) {
			A[i]=sc.nextInt();
			somadeA+=A[i];
			
		}
		int numA=A[0];
		
		System.out.println("Digite os valores do vetor B: ");
		int somadeB=0;
		for(int i=0;i<n;i++) {
			B[i]=sc.nextInt();
			somadeB+=B[i];
			
		}
		int numB=A[0];
		System.out.println();
		
		for(int i=0;i<n;i++) {
			C[i]=B[i]+A[i];
			System.out.printf("%d",C[i]);
			
			
		}
		sc.close();

	}

}
